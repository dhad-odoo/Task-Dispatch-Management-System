<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherited_stock_picking_batch_form" model="ir.ui.view">
        <field name="name">_inherited.stock.picking.batch.form</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <group>
                    <field name="dock_id" />
                    <field name="vehicle_id" />
                    <field name="category_id" />
                    <field name="weight_capacity" widget="progressbar" />
                    <field name="volume_capacity" widget="progressbar" />


                </group>

            </xpath>
        </field>
    </record>
</odoo>